{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch UX (Unix)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/WirelessKitAddon.UX.Desktop/bin/Debug/net8.0/WirelessKitBatteryStatus.UX.exe",
            "args": ["Wacom CTH-470 WL"],
            "cwd": "${workspaceFolder}/WirelessKitAddon.UX.Desktop",
            "stopAtEntry": false,
        },
        {
            "name": "Launch UX (Windows)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/WirelessKitAddon.UX.Windows/bin/Debug/net8.0-windows10.0.17763.0/WirelessKitBatteryStatus.UX.exe",
            "args": ["Wacom CTH-470 WL"],
            "cwd": "${workspaceFolder}/WirelessKitAddon.UX.Windows",
            "stopAtEntry": false,
        },
        {
            "name": "OpenTabletDriver C# Plugin Debugging",
            "type": "coreclr",
            "request": "attach",
            "requireExactSource": false,
            "processName": "OpenTabletDriver.Daemon.exe",
            "logging": {
                "moduleLoad": false
            },
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}